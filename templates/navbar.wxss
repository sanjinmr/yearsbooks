.order_container {
  width: 100%;
  height: 100%;
}

.navbar {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #f0145a;
  font-size: 30rpx;
  color: white;
}

.navbar .navbar_item {
  width: 20%;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navbar .navbar_item.active:after {
  content: "";
  display:block;
  position: absolute;
  bottom: 4rpx;
  left: 10rpx;
  right: 10rpx;
  height: 6rpx;
  background: white;
}