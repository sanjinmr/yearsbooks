/* pages/classify/classify.wxss */
page {
  background-color: #F8F9FD;
}

/* 总体盒子 */
.classify_container {
  width: 100%; 
  height: 100%; 
  align-items: center;
  margin: 0 auto;
  padding: 0 auto;
  display: flex;
  flex-direction: row;
}

/*左侧栏主盒子*/
.nav_left{ 
  position: absolute;
  width: 25%; 
  height: 100%; 
  top: 0; 
  left: 0; 
  bottom: 0;
  /*主盒子设置背景色为灰色*/
  background: #f5f5f5; 
  text-align: center;
} 

/*右侧栏主盒子*/
.nav_right { 
  position: absolute;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 75%; 
  height: 100%;
  top: 0; 
  right: 0; 
  bottom: 0;
  padding: 10px; 
  box-sizing: border-box; 
  background: #f5f5dc; 
} 

/*左侧栏list的item*/  
.nav_left .nav_left_items {  
  /*每个高30px*/  
  height: 40px;  
  /*垂直居中*/  
  line-height: 40px;  
  /*再设上下padding增加高度，总高42px*/  
  padding: 6px 0;  
  /*只设下边线*/  
  border-bottom: 1px solid #dedede;  
  /*文字14px*/  
  font-size: 14px; 
} 

.nav_left .nav_left_items:active {
  background-color: #f5f5dc;
}

.nav_right .nav_right_items {
  float: left;
  width: 33.33%;
  height: 120px;
  text-align: center;
}

.nav_right .nav_right_items image {  
  width: 60px;  
  height: 60px;  
  margin-top: 15px;  
} 

.nav_right .nav_right_items text{  
  /*给text设成块级元素*/  
  display: block;  
  margin-top: 15px;  
  font-size: 14px;  
  color: black;
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 

.nodata_text {
  color: black;
  font-size: 14px;  
  text-align: center;  
}

